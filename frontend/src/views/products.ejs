<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Site Header</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <%- include('partials/header') %>

    <!-- Products Section -->
    <div style="background-image: url('/images/background.png');" class="products-section">
        <h2>Our Products</h2>
        <div id="products-grid" class="products-grid">
            <% products.forEach(product => { %>
                <a href="/products/<%= product.id %>" class="product-item" style="background-image: url('/images/product<%= product.id%>.jpg');">
                    <div class="product-overlay"></div>
                    <div class="product-content">
                        <h3><%= product.name %></h3>
                        <p><%= product.Category ? product.Category.name : 'CATEGORY' %></p>
                        <p>Price: $<%= product.price %></p>
                        <button class="add-to-cart">Product Details</button>
                    </div>
                </a>
            <% }) %>
        </div>
    </div>


    <%- include('partials/footer') %>

    <script src="/js/script.js"></script>
</body>
</html>